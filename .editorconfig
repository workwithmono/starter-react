# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# JS and JSX
[{*.js, *.jsx, *.ts, *.tsx}]
indent_style = space
indent_size = 2

# CSS, Less and Sass
[{*.css, *.less, *.sass}]
indent_style = space
indent_size = 2

# HTML, Handlebars
[{*.html, *.hbs}]
indent_style = space
indent_size = 2

# JSON and Similar
[{*.json, *.yaml, *.yml}]
indent_style = space
indent_size = 2
